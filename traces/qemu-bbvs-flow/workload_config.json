{
  "workloads": {
    "dhrystone": {
      "description": "Dhrystone integer arithmetic benchmark",
      "compiler_flags": "-static",
      "qemu_arch": "riscv64",
      "interval": 100,
      "max_k": 30,
      "source": "https://github.com/sifive/benchmark-dhrystone.git"
    },
    "embench": {
      "description": "Embench IoT benchmark suite (pre-built)",
      "compiler_flags": "-c -O2 -ffunction-sections -march=rv32imfdc -mabi=ilp32d",
      "ldflags": "-Wl,-gc-sections -march=rv32imfdc -mabi=ilp32d",
      "user_libs": "-lm",
      "qemu_arch": "riscv32",
      "interval": 100,
      "max_k": 30,
      "source": "https://github.com/embench/embench-iot.git",
      "pre_built": true,
      "location": "/workspace/embench-iot"
    }
  },
  "supported_architectures": [
    "riscv32",
    "riscv64"
  ],
  "supported_compiler_flags": [
    "-static",
    "-march=rv32i -mabi=ilp32 -static",
    "-march=rv32imfdc -mabi=ilp32d",
    "-march=rv64i -mabi=lp64 -static",
    "-O2 -static",
    "-O3 -static",
    "-c -O2 -ffunction-sections -march=rv32imfdc -mabi=ilp32d"
  ],
  "toolchain": {
    "image": "ribeirovsilva/riscv-toolchain:latest",
    "riscv32_compiler": "riscv64-unknown-elf-gcc",
    "riscv64_compiler": "riscv64-linux-gnu-gcc"
  },
  "embench_specific": {
    "arch": "riscv32",
    "chip": "generic",
    "board": "ri5cyverilator",
    "cc": "riscv64-unknown-elf-gcc",
    "workloads": [
      "aha-mont64",
      "crc32",
      "cubic",
      "edn",
      "huffbench",
      "matmult-int",
      "md5sum",
      "minver",
      "nbody",
      "nettle-aes",
      "nettle-sha256",
      "nsichneu",
      "picojpeg",
      "qrduino",
      "sglib-combined",
      "slre",
      "st",
      "statemate",
      "ud",
      "wikisort"
    ]
  },
  "scripts": {
    "embench_standalone": "/run_embench_simple.sh",
    "setup_workload": "/setup_workload.sh",
    "run_analysis": "/run_analysis.sh"
  }
}